<div class="card">
  <div class="d-flex justify-content-center">
    <figure class="mt-3 mb-0 user-image">
      <%= image_tag(@user.image.variant(gravity: :center, resize:"500x500^", crop:"500x500+0+0").processed,
        alt: "#{@user.account_name}のアイコン画像", class: 'auto-image-100-100') %>
    </figure>
  </div>
  <div class="card-body text-center">
    <h4 class="card-title"><%= @user.account_name %></h4>
    <p class="card-text">評価：</p>
    <p class="card-text">出品数：<%= @untraded_products.count %></p>
  </div>
</div>