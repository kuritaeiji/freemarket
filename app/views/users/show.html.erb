<% if @user == current_user %>
  <%= provide(:title, 'マイページ') %>

  <div class="row">
    <div class="col-md-8" id="mypage-profiel">
      <%= render('users/show_user_card') %>
    </div>

    <%= render('shared/menu') %>
  </div>
<% else %>
  <%= provide(:title, "#{@user.account_name}のページ") %>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= render('users/show_user_card') %>
      <h4 class="my-4">この出品者の商品<h4>
      <div class="row">
        <%= render(@untraded_products, column_number: 4) %>
      </div>
      <div class="d-flex justify-content-center">
        <%= will_paginate(@untraded_products, renderer: WillPaginate::ActionView::BootstrapLinkRenderer) %>
      </div>
    </div>
  </div>
<% end %>