<% if @user == current_user %>
  <%= provide(:title, 'マイページ') %>

  <div class="row">
    <div class="col-md-8" id="mypage-profiel">
      <div class="card">
        <figure class="text-center mt-3 mb-0">
          <%= image_tag(@user.image.variant(gravity: :center, resize:"100x100^", crop:"100x100+0+0").processed,
            alt: "#{@user.account_name}のアイコン画像", width: '100', height: '100') %>
        </figure>
        <div class="card-body text-center">
          <h4 class="card-title"><%= @user.account_name %></h4>
          <p class="card-text">評価：</p>
          <p class="card-text">出品数：</p>
        </div>
      </div>
    </div>

    <div class="col-md-4 app-menu">
      <table class="table table-bordered table-hover">
        <tr><td class="p-0"><%= link_to('マイページ', @user, class: 'nav-link') %></td></tr>
      </table>

      <table class="table table-bordered table-hover">
        <h4 class="pl-3">設定</h4>
        <tr><td class="p-0"><%= link_to('プロフィール編集', edit_user_path(@user), class: 'nav-link') %></td></tr>
        <tr><td class="p-0"><%= link_to('住所変更', edit_address_user_path(@user), class: 'nav-link') %></td></tr>
        <tr><td class="p-0"><%= link_to('パスワード変更', new_password_reset_path, class: 'nav-link') %></td></tr>
        <tr><td class="p-0"><%= link_to('ログアウト', log_out_path, method: :delete, class: 'nav-link') %></td></tr>
        <tr><td class="p-0"><%= link_to('退会する', @user, method: :delete, class: 'nav-link') %></td></tr>
      </table>
    </div>
  </div>
<% end %>