<%= provide(:title, 'ログイン') %>
<h1 class="text-center">ログイン</h1>

<div class="row d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: @user, url: log_in_path, local: true, class: 'mb-3') do |f| %>
      <div class="form-group">
        <%= f.label(:email, 'メールアドレス') %>
        <%= f.email_field(:email, class: 'form-control') %>
      </div>

      <div class="form-group">
        <%= f.label(:password, 'パスワード') %>
        <%= f.password_field(:password, class: 'form-control') %>
      </div>

      <%= f.submit('ログイン', class: 'btn btn-primary w-100') %>
    <% end %>

    <%= link_to(oauth_authorization_path) do %>
      <div class="btn btn-secondary btn-block my-3">
        <%= image_pack_tag('google.png', alt: 'Googleのロゴ') %> googleでログイン
      </div>
    <% end %>
    <%= link_to('パスワードを忘れた場合', new_password_reset_path) %>
  </div>
</div>