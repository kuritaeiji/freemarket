<%= provide(:title, 'プロフィール編集') %>
<h1 class="text-center">プロフィール編集</h1>

<div class="row d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render('shared/error_messages', model: @user) %>

      <div class="form-group">
        <%= f.label(:account_name) %>
        <%= f.text_field(:account_name, class: 'form-control') %>
      </div>

      <div class="form-group">
        <%= f.label(:image) %>
        <%= f.file_field(:image, class: 'form-control-file') %>
      </div>

      <%= f.submit('更新', class: 'btn btn-primary btn-block') %>
    <% end %>
  </div>
</div>